#include <stdio.h>
#include <math.h>

int main() {
    double radius = 0.0;
    
    double surfaceArea = 0.0;
    const double PI = 3.14159;
    
    printf("Enter the radius : ");
    scanf("%lf", &radius);
   
    surfaceArea = 4 *PI * pow(radius, 3);
    printf("surface Area = %.2lf", surfaceArea);
    
    
    return 0;
}
